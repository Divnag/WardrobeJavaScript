<link href="~/Content/StyleSheet.css" rel="stylesheet" />

@model WardrobeDBFirstMVC.Models.Bottom
@{
    ViewBag.Title = "Details";
}



<div>
   
    <hr />
    <div class=" row">
        <div class="col-md-5"></div>
        <div class=" col-md-2">
            <div class="thumbnail ">
                <div class=" caption ">
                    <p>
                        <img src=" @Html.DisplayFor(model => model.BottomPhoto)" class="image" />
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.BottomName): @Html.DisplayFor(model => model.BottomName)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.Color):  @Html.DisplayFor(model => model.Color)
                    </p>
                    <p>
                        Occassion: @Html.DisplayFor(model => model.Occassion.Occassion1)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.Season.Season): @Html.DisplayFor(model => model.Season.Season)
                    </p>

                    <p>
                        <a class="glyphicon glyphicon-edit btn btn-default" href="@Url.Action("Edit", new { id = Model.BottomID })"></a>
                        <a class="glyphicon glyphicon-home btn btn-default " href="@Url.Action( "Index","Bottoms")"></a>
                        <a class="glyphicon glyphicon-erase btn btn-default " href="@Url.Action( "Delete",new { id = Model.BottomID })"></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
