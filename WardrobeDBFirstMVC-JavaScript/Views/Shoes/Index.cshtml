<link href="~/Content/StyleSheet.css" rel="stylesheet" />
@model IEnumerable<WardrobeDBFirstMVC.Models.Shoe>

@{
    ViewBag.Title = "Index";
}


<p>
    <a class="glyphicon glyphicon-new-window btn btn-default" href=" @Url.Action("Create", "Shoes")"></a>
</p>

<div class="row">
    <div class="col-md-2">
        <div class="jumbotron">
            <select id="mySelect" onchange="myFunction()">
                <option value="Search by season">Search by Season
                <option value="Summer">Summer
                <option value="Fall">Fall
                <option value="Spring">Spring
                <option value="All Season">All Season
                <option value="Winter">Winter

            </select>

        </div>
    </div>
    <div class="col-md-6">
        <div class="jumbotron" id="dis">
            <p></p>

        </div>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <div class="caption">

                    <p class="type">
                            @Html.DisplayFor(modelItem => item.ShoeName)
                        </p>
                    <p class=" photo" style="display:none">
                        <img src=" @Html.DisplayFor(modelItem => item.ShoePhoto)" class="image" height="100" width="100" />
                    </p>
